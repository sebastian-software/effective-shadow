{
  "name": "@effective/shadow",
  "version": "2.0.1",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./factory": {
      "types": "./dist/factory.d.ts",
      "import": "./dist/factory.js"
    },
    "./presets": {
      "types": "./dist/presets/index.d.ts",
      "import": "./dist/presets/index.js"
    },
    "./generate": {
      "types": "./dist/generate.d.ts",
      "import": "./dist/generate.js"
    },
    "./shadows.css": "./dist/shadows.css",
    "./shadows.module.css": "./dist/shadows.module.css",
    "./shadows-effective.css": "./dist/shadows-effective.css",
    "./shadows-vars.css": "./dist/shadows-vars.css",
    "./tailwind": {
      "types": "./dist/tailwind.d.ts",
      "import": "./dist/tailwind.js"
    }
  },
  "scripts": {
    "build": "rimraf dist && tsc && tsx scripts/build-css.ts",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src",
    "lint:fix": "eslint src --fix",
    "format": "prettier --write src",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "dev": "vite --config demo/vite.config.ts demo",
    "dev:tailwind": "vite --config demo-tailwind/vite.config.ts demo-tailwind",
    "build:demo": "vite build --config demo/vite.config.ts demo",
    "build:demo:tailwind": "vite build --config demo-tailwind/vite.config.ts demo-tailwind",
    "preview": "vite preview --config demo/vite.config.ts demo",
    "release": "release-it",
    "prepare": "husky",
    "clean:dist": "git clean -fXd",
    "update:latest": "ncu --upgrade --interactive",
    "update:minor": "ncu --upgrade --interactive --target minor",
    "update:pnpm": "corepack up"
  },
  "files": [
    "dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "author": {
    "name": "Sebastian Werner",
    "email": "s.werner@sebastian-software.de",
    "url": "http://sebastian-software.de/werner"
  },
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sebastian-software/effective-shadow.git"
  },
  "packageManager": "pnpm@10.24.0+sha512.01ff8ae71b4419903b65c60fb2dc9d34cf8bb6e06d03bde112ef38f7a34d6904c424ba66bea5cdcf12890230bf39f9580473140ed9c946fef328b6e5238a345a",
  "dependencies": {
    "bezier-easing": "^2.1.0"
  },
  "peerDependencies": {
    "tailwindcss": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@eslint/js": "^9.39.1",
    "@release-it/conventional-changelog": "^10.0.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "@vitest/coverage-v8": "^4.0.15",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "npm-check-updates": "^19.1.2",
    "prettier": "^3.7.4",
    "prism-react-renderer": "^2.4.1",
    "react": "^19.2.1",
    "react-colorful": "^5.6.1",
    "react-dom": "^19.2.1",
    "release-it": "^19.0.6",
    "rimraf": "^6.1.2",
    "tailwindcss": "^4.1.17",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vite": "^7.2.6",
    "vite-plugin-singlefile": "^2.3.0",
    "vite-plugin-svgr": "^4.5.0",
    "vitest": "^4.0.15"
  }
}
